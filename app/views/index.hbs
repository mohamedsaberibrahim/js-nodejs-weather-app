    <title>Weather | Home</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </nav> 
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center main">
          <div>
            <h1 class="mt-5">Weather Finder</h1>
            <p class="lead">Click Get Weather to get 8-day forecast!</p>
          </div>
          <div>
            <form action="/" method="POST">
              <input name="city" id="cityName" type="text" value="London" readonly>
              <input name="lng" id="lng" value="-0.11" style="display:none;"></p>
              <input name="lat" id="lat" value="51.50" style="display:none;"></p>
              <button class="btn btn-dark">Get Weather!</button>
            </form>
            <p id="error"></p>            
            <p id="demo2"></p>
            <h5 class="card-title">{{ title }}</h5>
            <div class="mt-3 row">
              
              {{#daily}}
              <div class="card mb-2 col text-center">
                <dl>
                    <hr>
                    <dt>{{prettifyDate dt}}</dt>
                    <hr>
                      <dd>
                      <strong>{{round temp.day}}</strong> / {{round temp.night}}
                      </dd>
                      <dd>
                      {{#weather}}
                      <img src="http://openweathermap.org/img/w/{{icon}}.png" alt="Image">
                      </dd>
                      <dd>
                      {{main}}
                      </dd>
                      <dd>
                      {{description}}
                      {{/weather}}
                      </dd>
                </dl>
                
              </div>
              {{/daily}}
              {{ error }}
            </div>
          </div>
        </div>
      </div>
    </div>
  <script src="./scripts/main.js">
</script>
  </body>
</html>